<mahapps:MetroWindow
    x:Class="MediaCatalogue.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:local="clr-namespace:MediaCatalogue.Views"
    xmlns:vm="clr-namespace:MediaCatalogue.ViewModels"
    mc:Ignorable="d"
    Title="Media Catalogue"
    TitleAlignment="Left"
    TitleCharacterCasing="Upper"
    Width="800"
    Height="450"
    MinWidth="495"
    MinHeight="375"
    SaveWindowPosition="True"
    ResizeMode="CanResizeWithGrip"
    TitleBarHeight="25"
    UseLayoutRounding="True"
    WindowTitleBrush="DarkRed"
    GlowBrush="Red"
    NonActiveGlowBrush="DarkSlateBlue"
    d:DataContext="{d:DesignInstance {x:Type vm:MainViewModel}}">
    <Grid>
        <local:MainView ViewModel="{Binding}" />
    </Grid>
</mahapps:MetroWindow>