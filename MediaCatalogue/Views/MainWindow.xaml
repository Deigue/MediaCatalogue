<mah:MetroWindow 
    x:Class="MediaCatalogue.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:local="clr-namespace:MediaCatalogue.Views"
    xmlns:vm="clr-namespace:MediaCatalogue.ViewModels"
    mc:Ignorable="d"
    Title="Media Catalogue"
    Height="450"
    Width="800"
    MinWidth="495"
    MinHeight="375"
    SaveWindowPosition="True"
    GlowBrush="Red"
    NonActiveGlowBrush="DarkSlateBlue">

    <Grid x:Name="rootGrid">
        <ContentPresenter Content="{Binding ActivePane}">
            <ContentPresenter.Resources>
                <DataTemplate DataType="{x:Type vm:MediaDataViewModel}">
                    <local:MediaDataView/>
                </DataTemplate>
                <!--DataTemplate DataType="{x:Type vm:Settin}-->
            </ContentPresenter.Resources>
        </ContentPresenter>
    </Grid>
</mah:MetroWindow>
