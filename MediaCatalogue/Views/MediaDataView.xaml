<local:MediaDataViewBase
    x:Class="MediaCatalogue.Views.MediaDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:MediaCatalogue.Views"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" ItemsSource="{Binding MenuItems}" Background="Black" IsMainMenu="True">
                <Menu.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding Header}"/>
                    </Style>
                </Menu.ItemContainerStyle>
            </Menu>
            <Grid>
                <TextBlock Text="Media Data View Grid" />
            </Grid>
        </DockPanel>
    </Grid>
</local:MediaDataViewBase>
